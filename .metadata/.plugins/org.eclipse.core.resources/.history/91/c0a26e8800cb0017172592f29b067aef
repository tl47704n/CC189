
public class RotateMatrix {
		RotateMatrix(){}
		void rotate(int[][] matrix) {
			int layer=0;
			int n=matrix.length;
			int[] temp = new int[matrix.length];
			for(int i=0;i<matrix[layer].length-1;i++) {
				temp[i]=matrix[layer][i];
				matrix[layer][i]=matrix[i][layer];
				matrix[i][layer]=matrix[matrix.length-1-layer][i];
				matrix[matrix.length-1-layer][i]=matrix[n-1-i][n-1-layer];
				matrix[n-1-i][n-1-layer]=temp[i];
			}
		}
}
