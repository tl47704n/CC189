
public class RotateMatrix {
		RotateMatrix(){}
		void rotate(int[][] matrix) {
			int layer=0;
			int n=matrix.length;
			int[] temp = new int[matrix.length];
			for(int i=0;i<matrix[layer].length-1;i++) {
				temp[i]=matrix[layer][i];
				//left to top
				matrix[layer][i]=matrix[n-1-i][n-1-layer];
				//bottom to left
				matrix[n-1-i][n-1-layer]=matrix[n-1-layer][n-1-i];
				//right copy to bottom
				matrix[n-1-layer][n-1-i]=matrix[n-1-i][n-1-layer];
			}
		}
}
